[user]
  email = leinhorn@keplergrp.com

[core]
  pager = delta

[push]
  default = current

[alias]
  co = checkout
  c = commit
  a = add
  s = status
  d = diff
  b = branch

[delta]
  side-by-side = true
  plus-style =  syntax "#214f11" # set background color
  syntax-theme = Monokai Extended
  dark = true

[interactive]
  diffFilter = delta --color-only
